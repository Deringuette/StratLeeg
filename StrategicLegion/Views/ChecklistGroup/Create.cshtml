@model StrategicLegion.Models.StrategyModels.ChecklistModels.Checklist

@{
    ViewBag.Title = "Create Checklist Groups";
}

<h2>@Model.ChecklistName</h2>
@Html.HiddenFor(model => model.ChecklistId)
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @for (int i = 0; i < Model.ChecklistGroups.Count; i++)
        {
            @Html.HiddenFor(model => model.ChecklistGroups[i].ChecklistGroupId)

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ChecklistGroups[i].GroupName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ChecklistGroups[i].GroupName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ChecklistGroups[i].GroupName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ChecklistGroups[i].ItemCount, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ChecklistGroups[i].ItemCount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ChecklistGroups[i].ItemCount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
