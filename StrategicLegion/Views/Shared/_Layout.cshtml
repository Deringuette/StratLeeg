<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav id="SLNavbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Strategic Legion</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Create Strategy<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("New Checklist", "Create", "Checklist")</li>
                        <li>@Html.ActionLink("New Image", "Create", "Image")</li>
                        <li>@Html.ActionLink("New Notepad", "Create", "Notepad")</li>
                        <li>@Html.ActionLink("New Whiteboard", "Create", "Whiteboard")</li>
                        <li>@Html.ActionLink("New Counter", "Create", "Counter")</li>
                    </ul>
                </li>
                <li><a href="#">Articles</a></li>
                <li><a href="#">Reviews</a></li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Strategic Legion</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
